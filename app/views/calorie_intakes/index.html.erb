<p id="notice"><%= notice %></p>

<h1>Calorie Intakes</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @calorie_intakes.each do |calorie_intake| %>
      <tr>
        <td><%= calorie_intake.name %></td>
        <td><%= calorie_intake.date %></td>
        <td><%= calorie_intake.amount %></td>
        <td><%= link_to 'Show', calorie_intake %></td>
        <td><%= link_to 'Edit', edit_calorie_intake_path(calorie_intake) %></td>
        <td><%= link_to 'Destroy', calorie_intake, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
  <%= link_to 'New Calorie Intake', new_calorie_intake_path %>
<% end %>
